@model RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_NoHeaderLayout.cshtml";
}

<div class='registration-page'>
    <div class='sub-header-registration'>
        <p> Registration </p>
    </div>
    <div class="form-sign-in">

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" })) {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })


            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="material-icons icon-blue">person_outline</i></span>
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First Name" })
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="material-icons icon-blue">person_outline</i></span>
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last Name" })
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="material-icons icon-blue">mail</i></span>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "useremail@gmail.com" })
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="material-icons icon-blue">vpn_key</i></span>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="material-icons icon-blue">vpn_key</i></span>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
                </div>
            </div>

            <div>
                <div class="col-md-8 reset-padding-left">
                    <a href="#" class='links-form'> <i class="material-icons">error_outline</i>Already registered? </a>
                    <a href="@Url.Action("Login")" class='links-form'> <i class="material-icons">person_outline</i> Sign In </a>
                </div>
                <div class="col-md-4 reset-padding-right">
                    <input type="submit" class="btn btn-primary btn-lg pull-right submit-form-btn" value="Register" />
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
