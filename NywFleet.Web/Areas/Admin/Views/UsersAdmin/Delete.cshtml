@model ApplicationUser

@{
    ViewBag.Title = "Delete";
}
@Html.Partial("_AdminPageHeader", new AdminPageHeader() {
    ControllerName = "UsersAdmin",
    ControllerDescription = "User Admin",
    CurrentActionDescription = "Delete user " + @Model.Email
})

<div class="ibox">
    <div class="ibox-title min-height" >

        <div class="alert alert-danger text-center">
            <i class="fa fa-exclamation-triangle fa-3x" aria-hidden="true"></i>
            <h3>
                Are you sure you want to delete this User? <br />
                
            </h3>

        </div>

        <div>

            <div class="text-center">
                    <div class="lead">       @Model.UserName</div>
           
            </div>

            @using (Html.BeginForm()) {
                @Html.AntiForgeryToken()
                <hr/>
                <div class="form-actions no-color text-center">
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
                    <input type="submit" value="Delete user" class="btn btn-primary" />

                </div>
            }
            <br />
        </div>

    </div>
</div>
